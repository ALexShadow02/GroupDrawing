{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "quotes" : [
            "error",
            "single"
        ],
        "semi" : [
            "error",
            "never"
        ],
        "comma-style" : [
            "error",
            "last"
        ],
        "comma-dangle" : [
            "error",
            "never"
        ],
        "comma-spacing" : [
            "error",
            {
                "before" : false,
                "after" : true
            }
        ],
        "brace-style" : [
            "error",
            "stroustrup"
        ],
        "block-spacing" : [
            "error",
            "always"
        ]
    }
}
